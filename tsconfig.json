{
    "compilerOptions": {
      "sourceMap": true,
      "experimentalDecorators": true,
      "target": "es5",
      "strict": true,
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitThis": true,
      "noImplicitAny": false,
      "allowJs": true,
      "baseUrl": ".",
      "lib": ["esnext", "dom"],
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "exclude": [
      "node_modules"
    ]
  }
  